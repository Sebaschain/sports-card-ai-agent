# Production Environment Variables
# Copy this to .env.production

# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password@db:5432/sportscards
POSTGRES_DB=sportscards
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# API Keys (Production)
EBAY_APP_ID=your_production_ebay_app_id
EBAY_CERT_ID=your_production_ebay_cert_id
EBAY_DEV_ID=your_production_ebay_dev_id
EBAY_TOKEN=your_production_ebay_token

OPENAI_API_KEY=sk-your-production-openai-key

# Application Settings
LOG_LEVEL=INFO
PYTHONPATH=/app

# SSL Configuration (if using custom domain)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN=your-domain.com
SERVER_NAME=your-domain.com

# Security Settings
SECRET_KEY=your-super-secure-secret-key-here
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Monitoring Settings
SENTRY_DSN=your-sentry-dsn-here
ENABLE_MONITORING=true

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Performance Settings
MAX_WORKERS=4
CACHE_TTL=3600